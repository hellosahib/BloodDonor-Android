<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingTop="50dp"
    android:background="@drawable/newbackground">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="0dp"
        android:paddingStart="36dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/opositive"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="36dp"
                android:background="@drawable/round_button"
                android:onClick="gotoRequestForm"
                android:text="O+"
                android:elevation="30dp"
                android:backgroundTint="@android:color/white"
                />

            <Button
                android:id="@+id/apositive"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="36dp"
                android:background="@drawable/round_button"
                android:onClick="gotoRequestForm"
                android:text="A+"
                android:elevation="30dp"
                android:backgroundTint="@android:color/white"/>

            <Button
                android:id="@+id/bpositive"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="36dp"
                android:background="@drawable/round_button"
                android:onClick="gotoRequestForm"
                android:text="B+"
                android:elevation="30dp"
                android:backgroundTint="@android:color/white"/>

            <Button
                android:id="@+id/abpositive"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="36dp"
                android:background="@drawable/round_button"
                android:backgroundTint="@android:color/white"
                android:onClick="gotoRequestForm"
                android:text="AB+"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="left">

            <Button
                android:id="@+id/onegative"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="36dp"
                android:background="@drawable/round_button"
                android:onClick="gotoRequestForm"
                android:text="O-"
                android:backgroundTint="@android:color/white"
                />

            <Button
                android:id="@+id/anegative"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="36dp"
                android:background="@drawable/round_button"
                android:onClick="gotoRequestForm"
                android:text="A-"
                android:backgroundTint="@android:color/white"/>

            <Button
                android:id="@+id/bnegative"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="36dp"
                android:background="@drawable/round_button"
                android:onClick="gotoRequestForm"
                android:text="B-"
                android:backgroundTint="@android:color/white"/>

            <Button
                android:id="@+id/abnegative"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="36dp"
                android:background="@drawable/round_button"
                android:onClick="gotoRequestForm"
                android:text="AB-"
                android:backgroundTint="@android:color/white"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>